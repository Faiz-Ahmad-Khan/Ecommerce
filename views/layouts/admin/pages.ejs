<% include adminheader.ejs %>
<div class="container">
 <h2 class="page-title">Pages</h2>

 <a href="/admin/pages/create" class="btn btn-primary">Add Pages</a>
<link rel="stylesheet" href="/styles/showPagesTable.css">
 <table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date Created</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <% pages.forEach(function(page){ %>
        <% if(page.slug != "home"){%>
    <tbody>
            <td><a href="" class="btn btn-default"><%= page.title %></a></td>
            <td><%= page.dateCreated %></td>
            <td><form action="/admin/pages/delete/<%= page._id %>?_method=DELETE" method="POST"><button class = "btn" type="submit"><i class="fa fa-trash-o" aria-hidden="true"> Delete</i></button></form></td>
            <td><a href="/admin/pages/edit/<%= page._id %>" class="btn"><i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i></a></td>
           
    </tbody>
    <% } %>
    <% }); %>
 </table>



</div>

<% include adminfooter.ejs %>